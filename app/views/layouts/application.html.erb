<!DOCTYPE html>
<html>
  <head>
    <title>Planer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="top_bar">
        <h1 class="grid-6"><a href="/">Planner</a></h1>
        <% if user_signed_in? %>
          <div class="user_bar grid-6">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            <%= link_to "予定作成", new_schedule_path, class: "create" %>
          </div>
        <% else %>
          <div class="user_bar grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer>
      <p>
        Planner
      </p>
    </footer>
  </body>
</html>
