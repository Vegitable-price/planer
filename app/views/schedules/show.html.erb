<div class="show_top">
  <%= link_to '戻る', root_path %>
</div>
<div class="main contents">
  <div class="contents_part">
    <% if user_signed_in? && current_user.id == @schedule.user_id %>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_schedule_path(@schedule.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', schedule_path(@schedule.id), method: :delete %>
        </li>
      </ul>
    <% else %>
      
    <% end %>
  </div>
  <p><%= @schedule.title%></p>
  <span class="text"><%= link_to @schedule.text, edit_schedule_path(@schedule.id), method: :get %>
  </span>
</div>