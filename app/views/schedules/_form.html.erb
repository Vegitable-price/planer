<%= form_with(model: @schedule, local: true) do |form| %>
      <%= render 'layouts/error_messages', model: form.object %>
      <%= form.date_field :title, class: "date" %>
      <%= form.text_field :text, placeholder: "予定名", class: "schedule_name" %>
      <%= form.text_field :memo, placeholder: "備考", class: "schedule_detail" %>
      <%= form.submit "作成", class: "edit_complete" %>
    <% end %>